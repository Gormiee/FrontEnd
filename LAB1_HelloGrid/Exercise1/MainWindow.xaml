        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="42" Width="260" Height="66" Background="#FFE31C1C" Grid.Column="1" MouseDown="HelloFromMe"><Run Language="da-dk" Text="Hej Soupman"/></TextBlock>

    </Grid>
</Window>
