        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="22" Width="160" Height="33" Background="#FF341CE3" MouseDown="HelloFromMe"><Run Language="da-dk" Text="Hej Soupman"/></TextBlock>
